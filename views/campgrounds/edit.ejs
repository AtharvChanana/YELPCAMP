<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="post" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" value="<%= campground.title %>" id="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" value="<%= campground.location %>" type="text" name="campground[location]" id="location" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" value="<%= campground.image %>" type="text" name="campground[image]" id="image" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" name='campground[price]' value="<%= campground.price %>" class="form-control" id="price" placeholder="0" aria-label="price" aria-describedby="price-label" required>
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= campground.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground.id%>"><button class="btn btn-danger mt-2">Cancel</button></a>
        </div>
    </div>