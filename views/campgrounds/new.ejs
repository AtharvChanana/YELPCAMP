<% layout('layouts/boilerplate') %>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm bg-dark-3">
                    <div class="card-body">
                        <h1 class="text-center mb-4 text-white">Add New Campground</h1>
                        <form action="/campgrounds" method="POST" novalidate class="validated-form">
                            <div class="mb-3">
                                <label class="form-label text-white-50 mb-2" for="title">Title</label>
                                <input class="form-control bg-dark text-white border-dark" type="text" name="campground[title]" id="title" required>
                                <div class="valid-feedback text-white-50">Looks Good!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-white-50 mb-2" for="location">Location</label>
                                <input class="form-control bg-dark text-white border-dark" type="text" name="campground[location]" id="location" required>
                                <div class="valid-feedback text-white-50">Looks Good!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-white-50 mb-2" for="image">Image URL</label>
                                <input class="form-control bg-dark text-white border-dark" type="text" name="campground[image]" id="image" required>
                                <div class="valid-feedback text-white-50">Looks Good!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-white-50 mb-2" for="price">Price</label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-dark border-dark text-white" id="price-label">$</span>
                                    <input type="text" name='campground[price]' class="form-control bg-dark text-white border-dark" id="price" placeholder="0"
                                        aria-label="price" aria-describedby="price-label" required>
                                </div>
                                <div class="valid-feedback text-white-50">Looks Good!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-white-50 mb-2" for="description">Description</label>
                                <textarea class="form-control bg-dark text-white border-dark" name="campground[description]" id="description"
                                    required></textarea>
                                <div class="valid-feedback text-white-50">Looks Good!</div>
                            </div>
                            <div class="d-flex gap-2">
                                <button class="btn btn-success w-50">Add Campground</button>
                                <a href="/campgrounds" class="btn btn-danger w-50">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    