<%- include('partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-content">
                <h1 class="display-1 text-danger mb-4"><%= statusCode || 500 %></h1>
                <h2 class="h3 mb-4"><%= message %></h2>
                <p class="lead text-muted mb-4">
                    <%= statusCode === 404 ? 'The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.' : 'We are working on fixing the issue. Please try again later.' %>
                </p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Back to Home
                    </a>
                    <a href="/campgrounds" class="btn btn-outline-secondary">
                        <i class="fas fa-campground me-2"></i>Browse Campgrounds
                    </a>
                </div>
                
                <!-- Show error details in development -->
                <% if (process.env.NODE_ENV === 'development' && stack) { %>
                    <div class="card mt-4 text-start">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Error Stack Trace</h5>
                        </div>
                        <div class="card-body p-0">
                            <pre class="bg-dark text-light p-3 mb-0" style="max-height: 300px; overflow: auto;">
<code><%= stack %></code>
                            </pre>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<style>
.error-content {
    padding: 2rem;
    border-radius: 0.5rem;
    background-color: #fff;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
}

.display-1 {
    font-size: 6rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 1rem;
}

.btn {
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-weight: 500;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
}

.btn i {
    transition: transform 0.2s ease;
    margin-right: 0.5rem;
}

.btn:hover i {
    transform: translateX(3px);
}

@media (max-width: 576px) {
    .display-1 {
        font-size: 4rem;
    }
    
    .btn {
        width: 100%;
        margin-bottom: 0.5rem;
    }
    
    .d-flex {
        flex-direction: column;
        gap: 0.5rem !important;
    }
}
</style>