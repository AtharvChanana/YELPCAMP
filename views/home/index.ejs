<style>
    /* Testimonials */
    .testimonial-card {
        background: #fff;
        border-radius: 10px;
        padding: 30px;
        height: 100%;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .testimonial-text {
        color: #333333 !important;
        font-size: 1.05rem;
        line-height: 1.6;
